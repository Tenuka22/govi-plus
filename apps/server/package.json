{
  "name": "server",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun run --watch ./index.ts",
    "db:generate": "bunx drizzle-kit generate --config='./drizzle/config.ts'",
    "db:migrate": "bunx drizzle-kit migrate --config='./drizzle/config.ts'",
    "db:studio": "bunx drizzle-kit studio --config='./drizzle/config.ts'",
    "db:push": "bunx drizzle-kit push --config='./drizzle/config.ts'",
    "db:pull": "bunx drizzle-kit pull --config='./drizzle/config.ts'",
    "auth:generate": "bunx @better-auth/cli generate --config='./auth/config.ts' --output='../../packages/shared/src/database/groups/auth-schema.ts'"
  },
  "devDependencies": {
    "@better-auth/cli": "^1.3.6",
    "@types/bun": "latest",
    "drizzle-kit": "^0.31.4",
    "zod": "^4.0.17"
  },
  "dependencies": {
    "@effect/platform": "^0.90.2",
    "@effect/platform-bun": "^0.78.0",
    "@repo/domain": "workspace:*",
    "@repo/shared": "workspace:*",
    "better-auth": "^1.3.6",
    "dotenv": "^17.2.1",
    "effect": "^3.17.7"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
